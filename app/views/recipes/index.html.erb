<h1>Recipes found for: <%= @search_param %></h1>

<div id="search-field-container">
  <form>
    <input id="search-field" type="search" name="search_param" placeholder="Search ingredient..."/>
    <input id="search-field-button" type="submit" value="Search"/>
  </form>
</div>

<div id="container">
  <table class="col_ld_12 col_md_12 col_sd_12">
    <% if @recipes.nil? || @recipes.empty? %>
        <p>No recipes found for <%= @search_param %>!</p>
    <% else %>
      <tr>
        <th scope="col">Thumbnail</th>
        <th scope="col">Title</th>
        <th scope="col">Rank</th>
      </tr>
      <% @recipes.each do |recipe| %>
          <tr class=<%= cycle('even', 'odd') %>>
            <td><%= image_tag(recipe["image_url"], height: '128', width: '150') %></td>
            <td><%= recipe["title"] %></td>
            <td><%= recipe["social_rank"] %></td>
          </tr>
      <% end %>
    <% end %>
  </table>
</div>